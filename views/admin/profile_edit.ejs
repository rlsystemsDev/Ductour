<% include ../header.ejs %> 
<div class="wrapper">
<% include ../navbar.ejs %> 
<% include ../sidebar.ejs %> 
  <div class="content-wrapper">
    


    <!-- Main content -->
    <section class="content">
        <% if(msg!=''){%>
          <div class="alert alert-success col-xs-6" id="msg">
            <strong></strong> <%= msg %>
          </div>
        <%}
       %>
      <div class="row">
        <!-- left column -->
        <div class="col-md-8">
          <!-- general form elements -->
          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title"><%= response.username ? 'Edit'  : ''  %> <b><%= response.username ? response.username : ''  %></b></h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form role="form" method="POST" enctype="multipart/form-data" action="/admin/update">
              <div class="box-body">
              <div class="form-group">
                  <% if(response.photo){ %>
                    <div class="form-group">
                      <div ><img style="width:180px; height: 160px;" src="/images/users/<%= response.photo%>"></div>
                    </div>
                    <% } %>
                  <!-- <label for="exampleInputEmail1">First name</label>
                  <input type="text" class="form-control" id="exampleInputfirstname"  name="first_name"placeholder="First name" value="<%= response.first_name ? response.first_name : ''  %>" required> -->
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Username</label>
                  <input type="text" class="form-control" id="exampleInputlastname" name="username" placeholder="Last name" required value="<%= response.username ? response.username : ''  %>">
                </div>
                
                <div class="form-group">
                  <label for="exampleInputEmail1">Email address</label>
                  <input type="email" class="form-control" id="exampleInputEmail1" name="email" placeholder="Enter email" required value="<%= response.email ? response.email : ''  %>" <% if(response.email){%>readonly <%}%>>
                </div>
               <!--  <% if(!response.password){ %>
                 <div class="form-group">
                  <label for="exampleInputEmail1">Password</label>
                  <input type="password" required class="form-control" id="exampleInputpassword" name="password" placeholder="Enter password" value="">
                </div>
                <% } %> -->
                <div class="form-group">
                  <label for="exampleInputFile">Image</label>
                  <input type="file" id="exampleInputFile" name="file" accept="image/*">
                  
  
                </div>
                <input type="hidden" value="<%= response.id ? response.id : ''  %>" name="user_id">
                <button type="submit" class="btn btn-primary">Save</button>
              </div>
              <!-- /.box-body -->

              
            </form>
          </div>


        </div>
        <div class="col-md-2" style="float:center"><button type="button" class="btn btn-info" data-toggle="modal" data-target="#myModal">Change Password</button></div>
      </div>
    </section>
    <!-- /.content -->
  </div>
  <div class="control-sidebar-bg"></div>
</div>



<% include ../header.ejs %> 
<div class="wrapper">
<% include ../navbar.ejs %> 
<% include ../sidebar.ejs %> 
  <div class="content-wrapper">
    


    <!-- Main content -->
    <section class="content">
        <% if(msg!=''){%>
          <div class="alert alert-success col-xs-6" id="msg">
            <strong></strong> <%= msg %>
          </div>
        <%}
       %>
      <div class="row">
        <!-- left column -->
        <div class="col-md-8">
          <!-- general form elements -->
          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title"><%= response.first_name ? 'Edit' : ' '  %> <b><%= response.first_name ? response.first_name : ' Setting Page for Admin'  %></b></h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form role="form" method="POST" enctype="multipart/form-data" action="/admin/update_setting">
              <div class="box-body">
              <div class="form-group">
                  <% if(response.photo){ %>
                    <div class="form-group">
                      <div ><img style="width:100px; height: 150px;" src="/images/users/<%= response.photo%>"></div>
                    </div>
                    <% } %>
                  <label for="exampleInputEmail1">Bvn</label>
                  <input type="text" class="form-control" id="exampleInputfirstname" name="is_bvn"placeholder="Enter Bvn " value="<%= response.is_bvn ? response.is_bvn : ''  %>" required>
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Child Limit</label>
                   <select class="form-control id="exampleInputlastname" name="child_limit">
                        <option value="Please Select">Please Select</option>
                        <option value="1-10">1-10</option>
                        <option value="10-100">10-100</option>
                        <option value="100-1000">100-1000</option>
                  </select>
                </div>
                 <div class="form-group">
                  <label for="exampleInputEmail1">Sponsers in Years</label>
                  <input type="text" class="form-control" id="exampleInputlastname" name="sponsor_in_year" placeholder="Enter sponsers Limit per Year" required value="<%= response.sponsor_in_year ? response.sponsor_in_year : ''  %>">
                </div>
                 <div class="form-group">
                  <label for="exampleInputEmail1">Default Sponsers</label>
                  <input type="text" class="form-control" id="exampleInputlastname" name="default_sponsor" placeholder="Default Sponsers" required value="<%= response.default_sponsor ? response.default_sponsor : ''  %>">
                </div>
                 <input type="hidden" value="<%= response.id ? response.id : ''  %>" name="user_id">
                <button type="submit" class="btn btn-primary">Save</button>
              </div>
              <!-- /.box-body -->

              
            </form>
          </div>


        </div>
        
    </section>
    <!-- /.content -->
  </div>
  <div class="control-sidebar-bg"></div>
</div>



<% include ../header.ejs %> 
<div class="wrapper">
<% include ../navbar.ejs %> 
<% include ../sidebar.ejs %> 
 
  <!-- Left side column. contains the logo and sidebar -->
 
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
       Policy Details
        <small> </small>
      </h1>
      
    </section>
    
    <!-- Main content -->
    <section class="content">
    
    <% if(msg!=''){%>
      <div class="alert alert-success col-xs-6" id="msg">
        <strong>Success!</strong> <%= msg %>
      </div>
    <%}%>
      <div class="row">
        <div class="col-xs-12">
          <div class="box">
              
            <!-- /.box-header -->
            <div class="box-body">
              <table id="example1" class="table table-bordered table-hover">
                <thead>
                <tr>
                  <th>Sr.No</th>
                  <th>Sponsers</th>
                  <th>Policy Name</th>
                  <th>Policy Number</th>
                  <th> Policy Description</th>
                  <th>Expiry Date</th>
                  <th>Interval(Months)</th>
                  <th>Action</th>
                  

                </tr>
                </thead>
                <tbody>
               <% 
                if(response && response.length>0){
                for(var i in response){
                %>
                
                <tr>
                  <td><%= parseInt(i)+1%></td>
                  <td><%= response[i].username? response[i].username : '' %></td>
                  <td><%= response[i].name ? response[i].name : '' %></td>
                  <td><%= response[i].number ? response[i].number : '' %></td>
                  <td><%= response[i].description ? response[i].description : '' %></td>
                  <td><%= response[i].expiry_date ? response[i].expiry_date : '' %></td>
                  <td><%= response[i].interval ? response[i].interval : '' %></td>
                  <td>
                  <a href="/policy/views?id=<%= response[i].id%>" class="btn btn-primary a-btn-slide-text">
                     <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                    <span>View</span>            
                     </a>
                  </td>
                  
                  
                  
                 
                </tr>
                
                <%  }
                } %>
                </tbody>
                
              </table>
              <div>
                  <p></p>
                </div
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->

          
          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  

  
</div>

<% include ../footer.ejs %> 


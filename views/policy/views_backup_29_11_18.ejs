<% include ../header.ejs %> 
<div class="wrapper">
<% include ../navbar.ejs %> 
<% include ../sidebar.ejs %> 
  <div class="content-wrapper">
    


    <!-- Main content -->
    
   
    <section class="content">
        <% if(msg!=''){%>
          <div class="alert alert-error col-xs-6" id="msg">
            <strong></strong> <%= msg %>
          </div>
        <%}%>
        <% console.log(response.blood_group);%>
      <div class="row">
        <!-- left column -->
        <div class="col-md-8">
          <!-- general form elements -->
          <div class="box box-primary">
            <div class="box-header with-border">
            <% console.log(response);%>
              <h3>View Your  Policies  </h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form role="form" method="POST" enctype="multipart/form-data" action="/users/save">
              <div class="box-body">
                  <% if(response.image){ %>
                    <div class="form-group">
                      
                      <div ><img style="width:200px; height: 150px;" id="output" src="/images/users/<%= response.image%>"></div>
                    </div>
                    <% } %>
              <div class="form-group">
                  <label for="exampleInputEmail1">Sponsers</label>
                  <p><%= response.username ? response.username : ''  %></p>
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Policy Name</label>
                  <p><%= response.name ? response.name : ''  %></p>
                  </div>
                 <div class="form-group">
                  <label for="exampleInputEmail1">Policy Number</label>
                  <p><%= response.number ? response.number : ''  %></p>
                  
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1"> Policy Description</label>
                  <p><%= response.description ? response.description : ''  %></p>
                  
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Expiry Date</label>
                  <p><%= response.expiry_date ? response.expiry_date : ''  %></p>
                  
                </div>
                
                <div class="form-group">
                  <label for="exampleInputEmail1">Interval(Months)</label>
                  <p><%= response.interval ? response.interval : ''  %></p>
                   
                </div>
                 
                
                
                <input type="hidden" value="<%= response.id ? response.id : ''  %>" name="user_id">
                
                
                
              </div>
              <!-- /.box-body -->

              
            </form>
          </div>


        </div>
        <div class="="col-md-4">
          <img id="output" style="width:400px;height:auto;max-height:600px;">
        </div>
      </div>
    </section>
    <!-- /.content -->
  </div>
  <div class="control-sidebar-bg"></div>
  
</div>
<% include ../footer.ejs %> 



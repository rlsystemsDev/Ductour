<% include ./header.ejs %> 
<div class="wrapper">
<% include ./navbar.ejs %> 
<% include ./sidebar.ejs %> 
  <div class="content-wrapper">
    


    <!-- Main content -->
    
   
    <section class="content">
        <% if(msg!=''){%>
          <div class="alert alert-error col-xs-6" id="msg">
            <strong></strong> <%= msg %>
          </div>
        <%}%>
       <!--  <% console.log(response.blood_group);%> -->
      <div class="row">
        <!-- left column -->
        <div class="col-md-8">
          <!-- general form elements -->
          <div class="box box-primary">
            <div class="box-header with-border">
                <button type="submit" class="btn btn-info pull-right" onclick="goBack()">Back</button>
              <h3 style="text-align: ">View User Detail</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form role="form" method="POST" enctype="multipart/form-data" action="/users/save">
              <div class="box-body">
                <div class="form-group">
                  <label for="exampleInputEmail1"> User Name</label>
                  <p><%= response.username ? response.username : ''  %></p>
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1"> Email</label>
                  <p><%= response.email ? response.email : ''  %></p>
                  </div>
                 <div class="form-group">
                  <label for="exampleInputEmail1"> D.O.B </label>
                  <p><%= response.dob? response.dob : ''  %></p>
                  
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Blood Group </label>
                  <p><%= response.blood_group? response.blood_group : ''  %></p>
                  
                </div>
                
            </div>
             
              <!-- /.box-body -->

              
            </form>
          </div>

</div>
        </div>
        <div class="="col-md-4">
          <img id="output" style="width:400px;height:auto;max-height:600px;">
        </div>
      </div>
    </section>
    <!-- /.content -->
  </div>
  <div class="control-sidebar-bg"></div>
  
</div>
<% include ./footer.ejs %> 



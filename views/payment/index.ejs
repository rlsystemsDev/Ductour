<% include ../header.ejs %> 
<div class="wrapper">
<% include ../navbar.ejs %> 
<% include ../sidebar.ejs %> 
  <div class="content-wrapper">
   


    <!-- Main content -->
    
   
    <section class="content">
        <% if(msg!=''){%>
          <div class="alert alert-error col-xs-6" id="msg">
            <strong></strong> <%= msg %>
          </div>
        <%}%>
        
      <div class="row">
        <!-- left column -->
        <div class="col-md-8">
          <!-- general form elements -->
          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Payment for  Policy Renew and Paid Top up</b></h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form role="form" method="POST" enctype="multipart/form-data" action="/payment/save">
             
              <div class="form-group">
                  <label for="exampleInputEmail1"> Pay for Top up </label>
                  <input type="text" class="form-control" id="exampleInputfirstname"  name="top_up_amount"placeholder="Enter Amount for Top Up" value="<%= response.top_up_amount ? response.top_up_amount : ''  %>" required>
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Pay for Renew</label>
                  <input type="text" class="form-control" id="exampleInputfirstname"  name="renew_amount"placeholder="Enter Amount for Renew" value="<%= response.renew_amount ? response.renew_amount : ''  %>" required>
                </div>
                 <div class="form-group">
                  <label for="exampleInputEmail1">Comment</label>
                  <input type="text" class="form-control" id="exampleInputfirstname"  name="comment"placeholder="Enter text" value="<%= response.comment ? response.comment : ''  %>" required>
                </div>
                
                <input type="hidden" value="<%= response.id %>" name="user_id">
                
                <button type="submit" class="btn btn-primary">Save</button>
              </div>
              <!-- /.box-body -->

              
            </form>
          </div>


        </div>
        <div class="="col-md-4">
          <img id="output" style="width:300px;height:auto;max-height:500px;">
        </div>
      </div>
      <div class="col-md-2" style="float:center"><button type="button" class="btn btn-info" data-toggle="modal" data-target="#myModalss">Change Password</button></div>
    </section>
    <!-- /.content -->
  </div>
  <div class="control-sidebar-bg"></div>
  
</div>
<% include ../footer.ejs %> 



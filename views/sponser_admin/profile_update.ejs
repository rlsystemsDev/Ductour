<% include ./header.ejs %> 
<div class="wrapper">
<% include ./navbar.ejs %> 
<% include ./sidebar.ejs %> 
  <div class="content-wrapper">
    


    <!-- Main content -->
    
   
    <section class="content">
        <% if(msg!=''){%>
          <div class="alert alert-error col-xs-6" id="msg">
            <strong></strong> <%= msg %>
          </div>
        <%}%>
        
      <div class="row">
        <!-- left column -->
        <div class="col-md-8">
          <!-- general form elements -->
          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title"><%= response.Username ? 'Update' : 'Update'  %> <b><%= response.Username ? response.Username : 'Details'  %></b></h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form role="form" method="POST" enctype="multipart/form-data" action="/sponsers/profile_save">
              <div class="box-body">
                 <div class="box-body">
                  <% if(response.image){ %>
                    <div class="form-group">
                      <label for="exampleInputPassword1">Image</label>
                      <div ><img style="width:180px; height: 170px;" src="/images/users/<%= response.image%>"></div>
                    </div>
                    <% } %> 
              <div class="form-group">
                  <label for="exampleInputEmail1"> UserName</label>
                  <input type="text" class="form-control" id="exampleInputfirstname"  name="name"placeholder="Enter Policy  Name" value="<%= response.username ? response.username : ''  %>" required>
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Email </label>
                  <input type="email" class="form-control" id="exampleInputfirstname" name="email" placeholder="Enter  email" required value="<%= response.email ? response.email : ''  %>" required>
                </div>
                
                <div class="form-group">
                  <label for="exampleInputFile">Image</label>
                  <input type="file" onchange="loadFile(event)" id="exampleInputFile" name="file" accept="image/*" <% if(!response.image){ %> required <% } %>>  
                  
                </div>
                
                <input type="hidden" value="<%= response.id ? response.id : ''  %>" name="user_id">
                
                <button type="submit" class="btn btn-primary">Save</button>
              </div>
              <!-- /.box-body -->

              
            </form>
          </div>


        </div>
        <div class="="col-md-4">
          <img id="output" style="width:300px;height:auto;max-height:500px;">
        </div>
      </div>
      <div class="col-md-2" style="float:center"><button type="button" class="btn btn-info" data-toggle="modal" data-target="#myModalss">Change Password</button></div>
    </section>
    <!-- /.content -->
  </div>
  <div class="control-sidebar-bg"></div>
  
</div>
<% include ./footer.ejs %> 



<% include ../header.ejs %> 
<div class="wrapper">
<% include ../navbar.ejs %> 
<% include ../sidebar.ejs %> 
  <div class="content-wrapper">
    


    <!-- Main content -->
    
   
    <section class="content">
        <% if(msg!=''){%>
          <div class="alert alert-error col-xs-6" id="msg">
            <strong></strong> <%= msg %>
          </div>
        <%}%>
      <div class="row">
        <!-- left column -->
        <div class="col-md-8">
          <!-- general form elements -->
          <div class="box box-primary">
            <div class="box-header with-border">
            <% console.log(response);%>
              <h3 class="box-title"><%= response.name ? 'Edit' : 'Create'  %> <b><%= response.id ? response.name : 'new'  %></b></h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form role="form" method="POST" enctype="multipart/form-data" action="/sponsers/policy_save">
              <div class="box-body">
                  
              <div class="form-group">
                  <label for="exampleInputEmail1"> Policy Name</label>
                  <input type="text" class="form-control" id="exampleInputfirstname"  name="policy_name"placeholder="Enter Policy  Name" value="<%= response.name ? response.name : ''  %>" required>
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Policy Number </label>
                  <input type="text" class="form-control" id="check_email" name="Policy_number" placeholder="Enter  Policy Number" required value="<%= response.number ? response.number : ''  %>" required>
                </div>
                
                <div class="form-group">
                  <label for="exampleInputEmail1">Policy Details  </label>
                  <input type="text" class="form-control" id="check_location" name="policy_deatils" placeholder="Enter  Details of Policy" required value="<%= response.description ? response.description : ''  %>" >
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Expiry Date </label>
                  <input type="date" max="9999-12-31" class="form-control" id="check_email" name="expiry_date" placeholder="Enter  Expiry Date" required value="<%= response.expiry_date ? response.expiry_date : ''  %>" required>
                </div>
                
                <input type="hidden" value="<%= response.id ? response.id : ''  %>" name="user_id">
                
                <button type="submit" class="btn btn-primary">Save</button>
              </div>
              <!-- /.box-body -->

              
            </form>
          </div>


        </div>
        <div class="="col-md-4">
          <img id="output" style="width:300px;height:auto;max-height:500px;">
        </div>
      </div>
    </section>
    <!-- /.content -->
  </div>
  <div class="control-sidebar-bg"></div>
  
</div>
<% include ../footer.ejs %> 



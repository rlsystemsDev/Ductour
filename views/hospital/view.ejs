<% include ../header.ejs %> 
<div class="wrapper">
<% include ../navbar.ejs %> 
<% include ../sidebar.ejs %> 
  <div class="content-wrapper">
    


    <!-- Main content -->
    
   
    <section class="content">
        <% if(msg!=''){%>
          <div class="alert alert-error col-xs-6" id="msg">
            <strong></strong> <%= msg %>
          </div>
        <%}%>
        
      <div class="row">
        <!-- left column -->
        <div class="col-md-8">
          <!-- general form elements -->
          <div class="box box-primary">
            <div class="box-header with-border">
            
              <h3>View <%= response.username ? response.username : ''%> </h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form role="form" method="POST" enctype="multipart/form-data" action="/users/save">
              <div class="box-body">
                  <% if(response.image){ %>
                    <div class="form-group">
                      
                      <div ><img style="width:200px; height: 150px;" id="output" src="/images/users/<%= response.image%>"></div>
                    </div>
                    <% } %>
              <div class="form-group">
                  <label for="exampleInputEmail1">Username</label>
                  <p><%= response.username ? response.username : ''  %></p>
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Email</label>
                  <p><%= response.email ? response.email : ''  %></p>
                  </div>
                 <div class="form-group">
                  
                  <% if(response.policy_details && response.policy_details!=''){
                    for(let i in response.policy_details){
                    %>
                  <div class="form-group">
                    <b>Policy Name</b><p><%= response.policy_details[i].name ? response.policy_details[i].name   : ''  %></p>
                 <!--  <b>Interval</b><p><%= response.policy_details[i].interval ? response.policy_details[i].interval : ''  %></p>
                  <b>Expiry Date</b><p><%= response.policy_details[i].expiry_date ? response.policy_details[i].expiry_date : ''  %></p> -->
                  <b>Policy Number</b><p><%= response.policy_details[i].number ? response.policy_details[i].number : ''  %></p>
                    </div>
                  <%}}%>
                </div>
                
                
                
                <input type="hidden" value="<%= response.id ? response.id : ''  %>" name="user_id">
                
                
                
              </div>
              <!-- /.box-body -->

              
            </form>
          </div>


        </div>
        <div class="="col-md-4">
          <img id="output" style="width:400px;height:auto;max-height:600px;">
        </div>
      </div>
    </section>
    <!-- /.content -->
  </div>
  <div class="control-sidebar-bg"></div>
  
</div>
<% include ../footer.ejs %> 



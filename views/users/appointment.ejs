<% include ../header.ejs %> 
<div class="wrapper">
<% include ../navbar.ejs %> 
<% include ../sidebar.ejs %> 
 
  <!-- Left side column. contains the logo and sidebar -->
 
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        User Appointments  Details
        <small> </small>
      </h1>
      
    </section>
    
    <!-- Main content -->
    <section class="content">
    <% if(msg!=''){%>
      <div class="alert alert-success col-xs-6" id="msg">
        <strong>Success!</strong> <%= msg %>
      </div>
    <%}%>
      <div class="row">
        <div class="col-xs-12">
          <div class="box">
              
            <!-- /.box-header -->
            <div class="box-body">
              <table id="example1" class="table table-bordered table-hover">
                <thead>
                <tr>
                  <th>id</th>
                  <th>Date</th>
                  <th>Note</th>
                  <th>User Name</th>
                   <th>Status</th>
                  <th>Delete</th>
                </tr>
                </thead>
                <tbody>
               <% 
                if(response && response.length>0){
                for(var i in response){
                %>
                
                <tr>
                  <td><%= parseInt(i)+1%></td>
                  <td><%= response[i].date ? response[i].date : '' %></td>
                  <td><%= response[i].note ? response[i].note : '' %></td>
                  <td><%= response[i].username? response[i].username : '' %></td> 
                  <td>
                  <label class="switch">
                    <input type="checkbox" class="change_status" table="appointments" rel="<%= response[i].id %>" value="<%= response[i].status %>" <%= (response[i].status)?'checked':'' %>>
                    <span class="slider round" ></span>
                  </label>

                 
                </td>
                  <td><button class="btn btn-primary btn btn-danger delete delete_cat" type="submit" rel="<%= response[i].id %>" value="<%= response[i].status %>" <%= (response[i].status)?'checked':'' %> table="appointments" >Delete</button></td>
                 
                </tr>
                
                <%  }
                } %>
                </tbody>
                
              </table>
              <div>
                  <p></p>
                </div
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->

          
          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  

  
</div>

<% include ../footer.ejs %> 


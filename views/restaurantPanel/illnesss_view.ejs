<% include ./header.ejs %> 
<div class="wrapper">
<% include ./navbar.ejs %> 
<% include ./sidebar.ejs %> 
  <div class="content-wrapper">
    <!-- Main content -->
    
   
    <section class="content">
        <% if(msg!=''){%>
          <div class="alert alert-error col-xs-6" id="msg">
            <strong></strong> <%= msg %>
          </div>
        <%}%>
      <div class="row">
        <!-- left column -->
        <div class="col-md-8">
          <!-- general form elements -->
          <div class="box box-primary">
            <div class="box-header with-border">
                <button type="submit" class="btn btn-info pull-right" onclick="goBack()">Back</button>
              <h3 >View Treatment</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form role="form" method="POST" enctype="multipart/form-data" action="/users/save">
              <div class="box-body">
                <div class="form-group">
                  <label for="exampleInputEmail1"> User Name</label>
                  <p><%= response.username ? response.username : ''  %></p>
                </div>
               <!--  <div class="form-group">
                  <label for="exampleInputEmail1"> Policy Name</label>
                  <p><%= response.policy_name ? response.policy_name : ''  %></p>
                  </div> -->
                  <div class="form-group">
                    <label for="exampleInputEmail1">DUC. ID</label>
                    <p><%= response.policy_number ? response.policy_number : ''  %></p>
                  </div>
                 <div class="form-group">
                  <label for="exampleInputEmail1"> Treatment </label>
                  <p><%= response.illness_name? response.illness_name : ''  %></p>
                  
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Claim Status</label>
                  <p><%if(response.no_claim==1){ %></p>
                    Claimed
                    <%}else{%>
                      Claim Pending
                      <%}%>
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Claim Date</label>
                  <p><%= response.claim_date ? response.claim_date : ' Claim Pending'  %></p>
                
                </div>
                
            </div>
             
              <!-- /.box-body -->

              
            </form>
          </div>

</div>
        </div>
        <div class="="col-md-4">
          <img id="output" style="width:400px;height:auto;max-height:600px;">
        </div>
      </div>
    </section>
    <!-- /.content -->
  </div>
  <div class="control-sidebar-bg"></div>
  
</div>
<% include ./footer.ejs %> 



<% include ../header.ejs %> 
<div class="wrapper">
<% include ../navbar.ejs %> 
<% include ../sidebar.ejs %>

<!-- Left side column. contains the logo and sidebar -->

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
       Health Games
        <small> </small>
      </h1>
      
    </section> <br>
    <!-- Main content -->
   
    <section class="content">
        <% if(msg!=''){%>
          <div class="alert alert-error col-xs-6" id="msg">
            <strong></strong> <%= msg %>
          </div>
        <%}%>
      <div class="row">
        <!-- left column -->
        <div class="col-md-8">
          <!-- general form elements -->
          <div class="box box-primary">
            <div class="box-header with-border">
            
              <h3 class="box-title"><%= response.id ? 'Edit' : 'Create'  %> <b><%= response.name ? response.name : 'New Health Games'  %></b></h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form role="form" method="POST" enctype="multipart/form-data" action="/sponsors/healthgames_save">
              <div class="box-body">
                  
                    
              <div class="form-group">
                  <label for="exampleInputEmail1">Title</label>
                  <input type="text" class="form-control" id="exampleInputfirstname"  name="name"placeholder="Enter Title" value="<%= response.name ? response.name : ''  %>" required>
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">URL</label>
                  <input type="text" class="form-control" id="exampleInputlastname" name="url" placeholder="Enter URL" required value="<%= response.url ? response.url : ''  %>">
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Thumbnail</label>
                  <input type="file" onchange="loadFile(event)" id="exampleInputFile" name="file" accept="image/*" <% if(!response.thumbnail){ %> required <% } %>>  
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Description</label>
                  <input type="text" class="form-control" id="exampleInputlastname" name="description" placeholder="Enter Description" required value="<%= response.description ? response.description : ''  %>">
                </div>
                 
                
                
                <input type="hidden" value="<%= response.id ? response.id : ''  %>" name="user_id">
                
                <button  class="btn btn-info " onclick="goBack()">Back</button>
                <button type="submit" class="btn btn-primary">Save</button>
              </div>
              <!-- /.box-body -->

              
            </form>
          </div>


        </div>
        <div class="="col-md-4">
          <img id="output" style="width:300px;height:auto;max-height:500px;">
        </div>
      </div>
    </section>
    <!-- /.content -->
  </div>
  <div class="control-sidebar-bg"></div>
  
</div>
<% include ../footer.ejs %> 


